# Copy this file to config/bluesnap.yaml and customize it for your environment.
identity:
  instance_name: "bluesnap-living-room"
  friendly_name: "Bluesnap - Living Room"
  unique_suffix: "lr"

mqtt:
  host: broker.local
  port: 8883
  username: bluesnap
  password: secret
  discovery_prefix: homeassistant
  base_topic: bluesnap/lr
  client_id: bluesnap-lr
  keepalive: 60
  tls:
    enabled: true
    ca_cert: /etc/ssl/certs/ca.pem
    client_cert: /etc/ssl/certs/bluesnap.crt
    client_key: /etc/ssl/private/bluesnap.key

bluetooth:
  adapter: hci0
  reconnect_interval: 10
  speaker:
    name: Living Room Speaker
    mac: "AA:BB:CC:DD:EE:FF"
    keepalive_interval: 10

snapcast:
  server_host: snapserver.local
  server_port: 1704
  control_port: 1705
  latency: 80
  buffer_ms: 250
  client_name: bluesnap-livingroom
  server_stream: default
  audio_backend: pipewire

telemetry:
  interval: 15
  metrics: [cpu, memory, load, temperature, bluetooth]

watchdog:
  watchdog_interval: 60
  max_retries: 3
  reboot_on_failure: true

logging:
  level: INFO
  syslog:
    enabled: true
    host: logs.example.com
    port: 6514
    protocol: tcp
    tls: true
